{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "stripInternal": true,
    "pretty": false,
    "newLine": "lf",
    "sourceMap": false,
    "noEmitHelpers": false,
    "downlevelIteration": true,
    "moduleResolution": "node"
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
}
